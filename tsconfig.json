{
  "compilerOptions": {
    /* Projects */
    /* Language and Environment */
    "target": "es2016",

    /* Modules */
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["node"],
    "resolveJsonModule": true,

    /* JavaScript Support */
    /* Emit */
    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["./src"]
}
